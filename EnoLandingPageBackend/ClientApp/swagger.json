  "components": {
    "schemas": {
      "CtfInfoMessage": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The Title of the CTF.",
            "nullable": true
          },
          "startTime": {
            "type": "string",
            "description": "The StartTime of the CTF.",
            "format": "date-time"
          },
          "registrationCloseOffset": {
            "type": "string",
            "description": "The Time until Teams have to be registred.",
            "format": "date-time"
          },
          "checkInBeginOffset": {
            "type": "string",
            "description": "The Time when the checkin will be available.",
            "format": "date-time"
          },
          "checkInEndOffset": {
            "type": "string",
            "description": "The Time until Teams have to be checked in.",
            "format": "date-time"
          }
        },
        "additionalProperties": false,
        "description": "A DTO representing General Information about the CTF."
      },
      "LandingPageVulnboxStatus": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "Scoreboard": {
        "type": "object",
        "properties": {
          "currentRound": {
            "type": "integer",
            "format": "int64"
          },
          "startTimestamp": {
            "type": "string",
            "nullable": true
          },
          "endTimestamp": {
            "type": "string",
            "nullable": true
          },
          "dnsSuffix": {
            "type": "string",
            "nullable": true
          },
          "services": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardService"
            },
            "nullable": true
          },
          "teams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardTeam"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ScoreboardFirstBlood": {
        "type": "object",
        "properties": {
          "teamId": {
            "type": "integer",
            "format": "int64"
          },
          "teamName": {
            "type": "string",
            "nullable": true
          },
          "timestamp": {
            "type": "string",
            "nullable": true
          },
          "roundId": {
            "type": "integer",
            "format": "int64"
          },
          "flagVariantId": {
            "type": "integer",
            "format": "int64"
          }
        },
        "additionalProperties": false
      },
      "ScoreboardService": {
        "type": "object",
        "properties": {
          "serviceId": {
            "type": "integer",
            "format": "int64"
          },
          "serviceName": {
            "type": "string",
            "nullable": true
          },
          "flagVariants": {
            "type": "integer",
            "format": "int64"
          },
          "firstBloods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardFirstBlood"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ScoreboardTeam": {
        "type": "object",
        "properties": {
          "teamName": {
            "type": "string",
            "nullable": true
          },
          "teamId": {
            "type": "integer",
            "format": "int64"
          },
          "logoUrl": {
            "type": "string",
            "nullable": true
          },
          "countryCode": {
            "type": "string",
            "nullable": true
          },
          "totalScore": {
            "type": "number",
            "format": "double"
          },
          "attackScore": {
            "type": "number",
            "format": "double"
          },
          "defenseScore": {
            "type": "number",
            "format": "double"
          },
          "serviceLevelAgreementScore": {
            "type": "number",
            "format": "double"
          },
          "serviceDetails": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardTeamServiceDetails"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ScoreboardTeamServiceDetails": {
        "type": "object",
        "properties": {
          "serviceId": {
            "type": "integer",
            "format": "int64"
          },
          "attackScore": {
            "type": "number",
            "format": "double"
          },
          "defenseScore": {
            "type": "number",
            "format": "double"
          },
          "serviceLevelAgreementScore": {
            "type": "number",
            "format": "double"
          },
          "serviceStatus": {
            "$ref": "#/components/schemas/ServiceStatus"
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ServiceStatus": {
        "enum": [
          0,
          1,
          2,
          3,
          4,
          5
        ],
        "type": "integer",
        "format": "int32"
      },
      "TeamDetailsMessage": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "confirmed": {
            "type": "boolean"
          },
          "teamName": {
            "type": "string",
            "nullable": true
          },
          "vpnConfigAvailable": {
            "type": "boolean"
          },
          "rootPassword": {
            "type": "string",
            "nullable": true
          },
          "externalIpAddress": {
            "type": "string",
            "nullable": true
          },
          "internalIpAddress": {
            "type": "string",
            "nullable": true
          },
          "vulnboxStatus": {
            "$ref": "#/components/schemas/LandingPageVulnboxStatus"
          }
        },
        "additionalProperties": false
      },
      "TeamMessage": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "ctftimeId": {
            "type": "integer",
            "format": "int64",
            "nullable": true
          },
          "logoUrl": {
            "type": "string",
            "nullable": true
          },
          "countryCode": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TeamsMessage": {
        "type": "object",
        "properties": {
          "confirmedTeams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TeamMessage"
            },
            "nullable": true
          },
          "registeredTeams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TeamMessage"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}
