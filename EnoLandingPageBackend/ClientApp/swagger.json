{
  "openapi": "3.0.1",
  "info": {
    "title": "EnoLandingPage",
    "version": "v1"
  },
  "paths": {
    "/api/Account/Login": {
      "get": {
        "tags": ["Account"],
        "summary": "Login to the Portal.",
        "parameters": [
          {
            "name": "redirectUri",
            "in": "query",
            "description": "The URL the User will be redirected after succesfull login.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Account/OAuth2Redirect": {
      "get": {
        "tags": ["Account"],
        "parameters": [
          {
            "name": "redirectUri",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Account/Info": {
      "get": {
        "tags": ["Account"],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TeamDetailsMessage"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamDetailsMessage"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamDetailsMessage"
                }
              }
            }
          }
        }
      }
    },
    "/api/Account/VpnConfig": {
      "get": {
        "tags": ["Account"],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Account/WireguardConfig": {
      "get": {
        "tags": ["Account"],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Account/CheckIn": {
      "post": {
        "tags": ["Account"],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Admin/BootVm": {
      "get": {
        "tags": ["Admin"],
        "parameters": [
          {
            "name": "adminSecret",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "teamId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Admin/CtfJson": {
      "get": {
        "tags": ["Admin"],
        "parameters": [
          {
            "name": "adminSecret",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/AttackInfo": {
      "get": {
        "tags": ["AttackInfo"],
        "summary": "Gets the current AttackInfo.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AttackInfo"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["AttackInfo"],
        "summary": "Sets the Attack Info.",
        "parameters": [
          {
            "name": "adminSecret",
            "in": "query",
            "description": "The admin secret for authenticating the request.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "The body of the request.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AttackInfo"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AttackInfo"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AttackInfo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Data/CtfInfo": {
      "get": {
        "tags": ["Data"],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CtfInfoMessage"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CtfInfoMessage"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CtfInfoMessage"
                }
              }
            }
          }
        }
      }
    },
    "/api/Data/Teams": {
      "get": {
        "tags": ["Data"],
        "summary": "Get all Teams.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TeamsMessage"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamsMessage"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TeamsMessage"
                }
              }
            }
          }
        }
      }
    },
    "/api/Data/IPs": {
      "get": {
        "tags": ["Data"],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/ScoreboardInfo/scoreboard.json": {
      "get": {
        "tags": ["ScoreboardInfo"],
        "summary": "Gets the current scoreboard.",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/OverrideScoreboard"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OverrideScoreboard"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/OverrideScoreboard"
                }
              }
            }
          }
        }
      }
    },
    "/api/ScoreboardInfo/scoreboard{roundId}.json": {
      "get": {
        "tags": ["ScoreboardInfo"],
        "summary": "Gets the scoreboard of a given roundId.",
        "parameters": [
          {
            "name": "roundId",
            "in": "path",
            "description": "Number of the round.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": -1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/OverrideScoreboard"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OverrideScoreboard"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/OverrideScoreboard"
                }
              }
            }
          }
        }
      }
    },
    "/api/ScoreboardInfo/scoreboard": {
      "post": {
        "tags": ["ScoreboardInfo"],
        "summary": "Gets the scoreboard of a given roundId.\r\nThe round will be parsed from the JSON.",
        "parameters": [
          {
            "name": "adminSecret",
            "in": "query",
            "description": "The admin secret for authenticating the request.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Scoreboard"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Scoreboard"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Scoreboard"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Vulnbox/StartVulnbox": {
      "post": {
        "tags": ["Vulnbox"],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Vulnbox/ResetVulnbox": {
      "post": {
        "tags": ["Vulnbox"],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AttackInfo": {
        "type": "object",
        "properties": {
          "availableTeams": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "services": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CtfInfoMessage": {
        "required": [
          "checkInBeginTime",
          "checkInEndTime",
          "ctfEndTime",
          "ctfStartTime",
          "registrationCloseTime",
          "title"
        ],
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The Title of the CTF."
          },
          "ctfStartTime": {
            "type": "string",
            "description": "The StartTime of the CTF.",
            "format": "date-time"
          },
          "ctfEndTime": {
            "type": "string",
            "description": "The EndTime of the CTF.",
            "format": "date-time"
          },
          "registrationCloseTime": {
            "type": "string",
            "description": "The Time until Teams have to be registred.",
            "format": "date-time"
          },
          "checkInBeginTime": {
            "type": "string",
            "description": "The Time when the checkin will be available.",
            "format": "date-time"
          },
          "checkInEndTime": {
            "type": "string",
            "description": "The Time until Teams have to be checked in.",
            "format": "date-time"
          }
        },
        "additionalProperties": false,
        "description": "A DTO representing General Information about the CTF."
      },
      "LandingPageVulnboxStatus": {
        "enum": ["None", "Creating", "Created"],
        "type": "string"
      },
      "OverrideScoreboard": {
        "required": ["currentRound", "services", "teams"],
        "type": "object",
        "properties": {
          "currentRound": {
            "type": "integer",
            "format": "int64"
          },
          "startTimestamp": {
            "type": "string",
            "nullable": true
          },
          "endTimestamp": {
            "type": "string",
            "nullable": true
          },
          "dnsSuffix": {
            "type": "string",
            "nullable": true
          },
          "services": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardService"
            }
          },
          "teams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OverrideScoreboardTeam"
            }
          }
        },
        "additionalProperties": false
      },
      "OverrideScoreboardTeam": {
        "required": [
          "attackScore",
          "defenseScore",
          "serviceLevelAgreementScore",
          "teamId",
          "teamName",
          "totalScore"
        ],
        "type": "object",
        "properties": {
          "teamName": {
            "type": "string"
          },
          "teamId": {
            "type": "integer",
            "format": "int64"
          },
          "logoUrl": {
            "type": "string",
            "nullable": true
          },
          "countryCode": {
            "type": "string",
            "nullable": true
          },
          "totalScore": {
            "type": "number",
            "format": "double"
          },
          "attackScore": {
            "type": "number",
            "format": "double"
          },
          "defenseScore": {
            "type": "number",
            "format": "double"
          },
          "serviceLevelAgreementScore": {
            "type": "number",
            "format": "double"
          },
          "serviceDetails": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OverrideScoreboardTeamServiceDetails"
            },
            "nullable": true
          },
          "totalScoreDelta": {
            "type": "number",
            "format": "double"
          },
          "attackScoreDelta": {
            "type": "number",
            "format": "double"
          },
          "defenseScoreDelta": {
            "type": "number",
            "format": "double"
          },
          "serviceLevelAgreementScoreDelta": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "OverrideScoreboardTeamServiceDetails": {
        "required": [
          "attackScore",
          "defenseScore",
          "serviceId",
          "serviceLevelAgreementScore",
          "serviceStatus"
        ],
        "type": "object",
        "properties": {
          "serviceId": {
            "type": "integer",
            "format": "int64"
          },
          "attackScore": {
            "type": "number",
            "format": "double"
          },
          "defenseScore": {
            "type": "number",
            "format": "double"
          },
          "serviceLevelAgreementScore": {
            "type": "number",
            "format": "double"
          },
          "serviceStatus": {
            "$ref": "#/components/schemas/ServiceStatus"
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "attackScoreDelta": {
            "type": "number",
            "format": "double"
          },
          "defenseScoreDelta": {
            "type": "number",
            "format": "double"
          },
          "serviceLevelAgreementScoreDelta": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "Scoreboard": {
        "required": ["currentRound", "services", "teams"],
        "type": "object",
        "properties": {
          "currentRound": {
            "type": "integer",
            "format": "int64"
          },
          "startTimestamp": {
            "type": "string",
            "nullable": true
          },
          "endTimestamp": {
            "type": "string",
            "nullable": true
          },
          "dnsSuffix": {
            "type": "string",
            "nullable": true
          },
          "services": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardService"
            }
          },
          "teams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardTeam"
            }
          }
        },
        "additionalProperties": false
      },
      "ScoreboardFirstBlood": {
        "required": [
          "flagVariantId",
          "roundId",
          "teamId",
          "teamName",
          "timestamp"
        ],
        "type": "object",
        "properties": {
          "teamId": {
            "type": "integer",
            "format": "int64"
          },
          "teamName": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          },
          "roundId": {
            "type": "integer",
            "format": "int64"
          },
          "flagVariantId": {
            "type": "integer",
            "format": "int64"
          }
        },
        "additionalProperties": false
      },
      "ScoreboardService": {
        "required": ["firstBloods", "flagVariants", "serviceId", "serviceName"],
        "type": "object",
        "properties": {
          "serviceId": {
            "type": "integer",
            "format": "int64"
          },
          "serviceName": {
            "type": "string"
          },
          "flagVariants": {
            "type": "integer",
            "format": "int64"
          },
          "firstBloods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardFirstBlood"
            }
          }
        },
        "additionalProperties": false
      },
      "ScoreboardTeam": {
        "required": [
          "attackScore",
          "defenseScore",
          "serviceDetails",
          "serviceLevelAgreementScore",
          "teamId",
          "teamName",
          "totalScore"
        ],
        "type": "object",
        "properties": {
          "teamName": {
            "type": "string"
          },
          "teamId": {
            "type": "integer",
            "format": "int64"
          },
          "logoUrl": {
            "type": "string",
            "nullable": true
          },
          "countryCode": {
            "type": "string",
            "nullable": true
          },
          "totalScore": {
            "type": "number",
            "format": "double"
          },
          "attackScore": {
            "type": "number",
            "format": "double"
          },
          "defenseScore": {
            "type": "number",
            "format": "double"
          },
          "serviceLevelAgreementScore": {
            "type": "number",
            "format": "double"
          },
          "serviceDetails": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ScoreboardTeamServiceDetails"
            }
          }
        },
        "additionalProperties": false
      },
      "ScoreboardTeamServiceDetails": {
        "required": [
          "attackScore",
          "defenseScore",
          "serviceId",
          "serviceLevelAgreementScore",
          "serviceStatus"
        ],
        "type": "object",
        "properties": {
          "serviceId": {
            "type": "integer",
            "format": "int64"
          },
          "attackScore": {
            "type": "number",
            "format": "double"
          },
          "defenseScore": {
            "type": "number",
            "format": "double"
          },
          "serviceLevelAgreementScore": {
            "type": "number",
            "format": "double"
          },
          "serviceStatus": {
            "$ref": "#/components/schemas/ServiceStatus"
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ServiceStatus": {
        "enum": [
          "INTERNAL_ERROR",
          "OK",
          "RECOVERING",
          "MUMBLE",
          "OFFLINE",
          "INACTIVE"
        ],
        "type": "string"
      },
      "TeamDetailsMessage": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "confirmed": {
            "type": "boolean"
          },
          "teamName": {
            "type": "string",
            "nullable": true
          },
          "vpnConfigAvailable": {
            "type": "boolean"
          },
          "rootPassword": {
            "type": "string",
            "nullable": true
          },
          "externalIpAddress": {
            "type": "string",
            "nullable": true
          },
          "internalIpAddress": {
            "type": "string",
            "nullable": true
          },
          "vulnboxStatus": {
            "$ref": "#/components/schemas/LandingPageVulnboxStatus"
          }
        },
        "additionalProperties": false
      },
      "TeamMessage": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "ctftimeId": {
            "type": "integer",
            "format": "int64",
            "nullable": true
          },
          "logoUrl": {
            "type": "string",
            "nullable": true
          },
          "countryCode": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TeamsMessage": {
        "type": "object",
        "properties": {
          "confirmedTeams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TeamMessage"
            },
            "nullable": true
          },
          "registeredTeams": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TeamMessage"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}
